{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchCategories": [
                "python"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true,
            "automergeType": "pr",
            "platformAutomerge": true
        },
        {
            "matchDepTypes": [
                "dependencies"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "pr"
        }
    ],
    "schedule": [
        "before 6am on Monday"
    ]
}
