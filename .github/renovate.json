{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchCategories": [
                "python"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true,
            "automergeType": "pr",
            "platformAutomerge": true
        },
        {
            "matchDepTypes": [
                "dependencies"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "pr"
        }
    ],
    "schedule": [
        "before 6am on Monday"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^loko/templates/.*\\.yaml$",
                "^loko/templates/.*\\.example$",
                "^loko\\.yaml$",
                "^loko-.*\\.yaml$"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) repositoryUrl=(?<registryUrl>\\S+)\\s+- [^:]+:\\s+\"(?<currentValue>[^\"]+)\"",
                "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) repositoryUrl=(?<registryUrl>\\S+)\\s+version:\\s+(?<currentValue>\\S+)",
                "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+- [^:]+:\\s+\"(?<currentValue>[^\"]+)\"",
                "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+version:\\s+(?<currentValue>\\S+)",
                "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+tag:\\s+(?<currentValue>\\S+)"
            ]
        }
    ]
}
