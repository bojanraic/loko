{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchCategories": [
                "python"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true,
            "automergeType": "pr",
            "platformAutomerge": true
        },
        {
            "matchDepTypes": [
                "dependencies"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "pr"
        }
    ],
    "schedule": [
        "before 6am on Monday"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/^loko/templates/.*\\.yaml$/",
                "/^loko/templates/.*\\.example$/"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s+.*?:\\s+\"(?<currentValue>.*?)\"",
                "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?) repositoryUrl=(?<registryUrl>.*?)\\s+.*?:\\s+\"(?<currentValue>.*?)\""
            ]
        }
    ]
}
